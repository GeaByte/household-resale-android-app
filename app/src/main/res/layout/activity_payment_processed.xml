<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentProcessed">

    <TextView
        android:id="@+id/txtPaymentProcessed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="112dp"
        android:gravity="center"
        android:text="@string/txtPaymentProcessed"
        android:textColor="@color/material_dynamic_tertiary10"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnReturnHome"
        android:layout_width="216dp"
        android:layout_height="73dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#4CAF50"
        android:text="@string/btnReturnHome"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPaymentProcessed" />
</androidx.constraintlayout.widget.ConstraintLayout>